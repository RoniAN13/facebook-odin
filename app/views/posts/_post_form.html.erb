<%= form_with(model: @post,remote: true,data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    
    <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    </div>
    <span class="image">
    <%= f.file_field :post_file, accept: "image/jpeg,image/gif,image/png,image/jpg,video/mp4" %>
</span>
    <%= f.submit "Post", class: "btn btn-primary" %>
    
<% end %>
<script type="text/javascript">
$("#post_image").bind("change", function() {
const size_in_megabytes = this.files[0].size/1024/1024;
if (size_in_megabytes > 5) {
alert("Maximum file size is 5MB. Please choose a smaller file.");
$("#post_image").val("");
}
});
</script>